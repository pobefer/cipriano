import NextJS from "./Icons/NextJS.astro"
import Tailwind from "./Icons/Tailwind.astro"
import AstroSVG from "./Icons/AstroSVG.astro"
import Link from "./Icons/Link.astro"
import LinkButton from "./LinkButton.astro"

const TAGS = {
  PYTHON: {
    name: "Python",
    class: "bg-black text-white",
    icon: Python,
  },
  CHATBOT: {
    name: "Chatbot",
    class: "bg-[#003159] text-white",
    icon: Chatbot,
  },
  NEXTJS: {
    name: "NextJS",
    class: "bg-[#003159] text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind css",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  ASTRO: {
    name: "Astro",
    class: "bg-[#003159] text-white",
    icon: AstroSVG,
  },
}
const PROJECTS = [
{
    title: "Radiofrecuencia de nervios y ganglios",
    description:
      ["Plexo simpatico lumbar", "Trigemino-Ganglio de Gasser", "Ganglio Estrellado", "Ganglio Esfenopalatino"],
    link: "#",
    image: "/cipriano/P1.webp",
  },
  {
    title: "Técnicas de Neuromodulación Espinal y Periférica ",
    description:
    ["Implante de sistemas de estimulación medular y nervio periférico",
"Implante de sistemas de infusion espinal: Bomba Intratecal infusion",
"Estimulación eléctrica transcutánea (TENS)",
"Estimulación eléctrica percutánea de nervios periféricos (PENS)",
"Implante de cateteres tunelizados",
"Implante de reservorios subcutáneos"],
    link: "#",
    github: "#",
    image: "/cipriano/P2.webp",
  },
  {
    title: "Tratamiento de Hernia discal",
    description:
    ["Tratamiento de la lumbalgia por artrosis de las articulaciones facetarias",
"Radiofrecuencia del Disco intervetebral",
"Radiofrecuencia de terminaciones nerviosas articulaciones",
"Recuperación de la estructura vertebral: Cifoplastia",
"OZONOTERAPIA Hernias discales: Discolisis y Tratamiento paravertebral",
"EPIDURAL Tratamiento transforaminal y translaminar",
"Liberación de fibrosis y adhesiones en el espacio epidural. Epidurolisis, epiduroscopia"],
    link: "#",
    image: "/cipriano/P3.webp",
  },
  {
    title: "Tratamiento Dolor de la Columna",
    description:
    ["Tratamiento de la lumbalgia por artrosis de las articulaciones facetarias",
"Radiofrecuencia del Disco intervetebral",
"Radiofrecuencia de terminaciones nerviosas articulaciones",
"Recuperación de la estructura vertebral: Cifoplastia",
"OZONOTERAPIA Hernias discales: Discolisis y Tratamiento paravertebral",
"EPIDURAL Tratamiento transforaminal y translaminar",
"Liberación de fibrosis y adhesiones en el espacio epidural. Epidurolisis, epiduroscopia"],
    link: "#",
    image: "/cipriano/P4.webp",
  },
  {
    title: "Tratamiento Dolor de Origen Musculoesquéletico",
